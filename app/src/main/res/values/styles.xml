<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderTextStyle" parent="BaseSettings">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="privatBankRecycleItemStyle" parent="BaseSettings">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="nationalBankRecycleItemStyle" parent="BaseSettings">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="smallTextStyle" parent="BaseSettings">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSmallText</item>
    </style>

    <style name="dateTextStyle" parent="BaseSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textColor">@color/colorDate</item>
    </style>

</resources>
